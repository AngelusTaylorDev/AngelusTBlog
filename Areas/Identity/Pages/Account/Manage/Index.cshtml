@page
@using AngelusTBlog.Services
@model IndexModel
@inject IImageService imageService

@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>


<div class="col-lg-10">
    <div class="single-featured article">
        <div class="align-items-center">
            <form id="profile-form" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-lg-7 col-md-6 ">
                        <div class="featured-content">
                            <div class="form-group">
                                @*<label asp-for="DisplayName"></label>
                                    <input asp-for="DisplayName" class="form-control" disabled />*@
                            </div>
                            <div class="form-group">
                                <label asp-for="Username"></label>
                                <input asp-for="Username" class="form-control" disabled />
                            </div>
                            <div class="form-group mt-2 bm-2">
                                <label asp-for="Input.PhoneNumber"></label>
                                <input asp-for="Input.PhoneNumber" class="form-control" />
                            </div>
                            <button id="update-profile-button" type="submit" class="default-btn btn-two mt-3">Save</button>
                        </div>
                    </div>

                    <div class="text-center form-group col-lg-5 bm-4">
                        <img src="@Model.CurrentImage" class="img-fluid rounded-circle img-thumbnail mb-3" width="70%" />

                        <div class="input-group form-group col-lg-5">
                            <input asp-for="Input.Image" type="file" class="form-control">
                        </div>
                    </div>
                </div>
                <partial name="_StatusMessage" model="Model.StatusMessage" />
            </form>
        </div>
    </div>
</div>


@section Scripts {
<partial name="_ValidationScriptsPartial" />
    }
