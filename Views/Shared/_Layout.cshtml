<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Title -->
    <title>@ViewData["Title"] - Angelus T Blog</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- Owl Theme Default Min CSS -->
    <link rel="stylesheet" href="~/css/owl.theme.default.min.css">
    <!-- Owl Carousel Min CSS -->
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <!-- Owl Magnific Min CSS -->
    <link rel="stylesheet" href="~/css/magnific-popup.min.css">
    <!-- Animate Min CSS -->
    <link rel="stylesheet" href="~/css/animate.min.css">
    <!-- Boxicons Min CSS -->
    <link rel="stylesheet" href="~/css/boxicons.min.css">
    <!-- Flaticon CSS -->
    <link rel="stylesheet" href="~/css/flaticon.css">
    <!-- Meanmenu Min CSS -->
    <link rel="stylesheet" href="~/css/meanmenu.min.css">
    <!-- Nice Select Min CSS -->
    <link rel="stylesheet" href="~/css/nice-select.min.css">
    <!-- tinymce JS -->
    <script src="https://cdn.tiny.cloud/1/i0yiaqj0e7qsakuz4uz3xpiotde91d3le117i33p2fe5dlq7/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <!-- Style CSS -->
    <link rel="stylesheet" href="~/css/style.css">
    <!-- Responsive CSS -->
    <link rel="stylesheet" href="~/css/responsive.css">

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="~/img/favicon.png">
</head>
<body>
    <header>
        <!-- Start Navbar Area -->
        <div class="navbar-area navbar-area-two">
            <!-- Menu For Mobile Device -->
            <div class="mobile-nav">
                <a asp-controller="Home" asp-action="Index" class="logo">
                    <img src="~/img/logo.png" alt="Logo">
                </a>
            </div>

            <!-- Menu For Desktop Device -->
            <div class="main-nav">
                <nav class="navbar navbar-expand-md">
                    <div class="container-fluid">
                        <a class="navbar-brand logo" asp-controller="Home" asp-action="Index">
                            <img class="mainLogo" src="~/img/logo.png" alt="Logo">
                        </a>

                        <div class="collapse navbar-collapse mean-menu">
                            <ul class="navbar-nav m-auto">
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" target="_blank" href="https://angelustaylor.com/">Author</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a>
                                </li>
                            </ul>

                            <ul class="navbar-nav ms-auto">
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">Account</a>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                        <li>
                                            <partial name="_LoginPartial">
                                        </li>
                                    </ul>
                                </li>
                            </ul>

                            <!-- Start Other Option -->
                            <div class="others-option">
                                <div class="follow">
                                    <span>Follow</span>
                                    <i class="bx bx-chevron-down"></i>
                                    <ul>
                                        <li>
                                            <a href="#" target="_blank">
                                                <i class="bx bxl-facebook"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#" target="_blank">
                                                <i class="bx bxl-twitter"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#" target="_blank">
                                                <i class="bx bxl-instagram"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#" target="_blank">
                                                <i class="bx bxl-youtube"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#" target="_blank">
                                                <i class="bx bxl-linkedin"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>

                                <div class="option-item">
                                    <i class="search-btn bx bx-search"></i>
                                    <i class="close-btn bx bx-x"></i>

                                    <div class="search-overlay search-popup">
                                        <div class='search-box'>
                                            <form class="search-form" asp-action="SearchIndex" asp-controller="Posts">
                                                <input type="text" name="SearchTerm" class="form-control search-input" placeholder="Search">
                                                <button class="search-button" type="submit"><i class="bx bx-search"></i></button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
        <!-- End Navbar Area -->
    </header>

    <!-- Main Body Start -->
    <section class="blog-details-area">
        <div class="container-fluid">
            <main role="main">
                @RenderBody()
            </main>
        </div>
    </section>
    <!-- Main Body End -->
    <!-- Start Footer Area -->
    <footer class="footer-top-area pt-100">
        <!-- Start Footer Top Area -->
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6">
