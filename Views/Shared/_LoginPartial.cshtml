@using Microsoft.AspNetCore.Identity
@inject SignInManager<BlogUser> SignInManager
@inject UserManager<BlogUser> UserManager

<div class="row">
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="col-lg-6 m-auto">
            <a class="nav-item" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity.Name</a>
        </div>

        <div class="col-lg-6 m-auto">
            <form class="form-inline nav-item" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </div>
    }
    else
    {
        
        <div class="d-grid gap-8 d-md-block fw-bold">
            <button class="btn btn-warning btn-sm">
                <a asp-area="Identity" asp-page="/Account/Login"><h5>Login</h5>  </a>
            </button>
        </div>
    }
</div>
